{
  "$schema": "https://opencode.ai/config.json",
  "model": "chutes/MiniMaxAI/MiniMax-M2",
  "agent": {
    "Orchestrator": {
      "description": "System Architect and Planner",
      "model": "zai/glm-4.6",
      "prompt": "{file:AGENTS.md}\n\n{file:agent/Orchestrator.md}",
      "mode": "primary",
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    },
    "Maintainer": {
      "description": "Quality Auditor and Repo Maintainer",
      "model": "zai/glm-4.6",
      "prompt": "{file:agent/Maintainer.md}",
      "mode": "primary",
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    },
    "Scribe": {
      "description": "Implementation Assistant",
      "model": "zai/glm-4.6",
      "prompt": "{file:agent/Scribe.md}",
      "mode": "subagent",
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    },
    "Operator": {
      "description": "Tool Interface and API Handler",
      "model": "zai/glm-4.6",
      "prompt": "{file:agent/Operator.md}",
      "mode": "subagent",
      "permission": {
        "edit": "ask",
        "bash": "ask"
      },
      "tools": {
        "context7_*": true
      }
    },
    "build": {
      "model": "google/gemini-2.5-pro"
    },
    "plan": {
      "model": "chutes/zai-org/GLM-4.6"
    }
  }
}
